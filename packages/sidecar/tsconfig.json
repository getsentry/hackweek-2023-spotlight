{
  "extends": "@sentry/spotlight-tsconfig/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "moduleResolution": "nodenext",
    "esModuleInterop": false,
    "target": "esnext",
    "module": "nodenext",
    "outDir": "dist",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "declaration": true
  },
  "include": ["src/*"]
}
