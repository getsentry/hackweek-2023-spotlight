{
  "name": "@spotlightjs/sidecar",
  "description": "A small proxy server to capture and forward data from backend services to Spotlight.",
  "version": "0.0.10",
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && tsc",
    "build:watch": "vite build --watch",
    "clean": "rimraf dist"
  },
  "files": [
    "dist",
    "src"
  ],
  "bin": "./server.js",
  "main": "dist/main.js",
  "module": "dist/main.js",
  "types": "dist/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "types": "./dist/main.d.ts"
    },
    "./vite-plugin": {
      "import": "./src/vite-plugin.js"
    },
    "./connect": {
      "import": "./src/connect.js"
    },
    "./run": {
      "import": "./src/run.js"
    }
  },
  "dependencies": {
    "kleur": "^4.1.5"
  },
  "devDependencies": {
    "@spotlightjs/tsconfig": "workspace:*",
    "@types/node": "^18",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
