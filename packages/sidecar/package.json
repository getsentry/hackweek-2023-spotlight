{
  "name": "@spotlightjs/sidecar",
  "description": "A small proxy server to capture and forward data from backend services to Spotlight.",
  "version": "0.0.16",
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && tsc",
    "build:watch": "vite build --watch",
    "clean": "rimraf dist"
  },
  "files": [
    "dist",
    "src"
  ],
  "bin": {
    "spotlight-sidecar": "./server.js"
  },
  "main": "dist/main.js",
  "module": "dist/main.js",
  "types": "dist/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "types": "./dist/main.d.ts"
    },
    "./vite-plugin": {
      "import": "./src/vite-plugin.js"
    },
    "./run": {
      "import": "./src/run.js"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "kleur": "^4.1.5",
    "@spotlightjs/tsconfig": "workspace:*",
    "@types/node": "^18",
    "typescript": "^5.0.2",
    "vite": "^4.5.1"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
