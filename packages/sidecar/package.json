{
  "name": "@spotlightjs/sidecar",
  "description": "A small proxy server to capture and forward data from backend services to Spotlight.",
  "version": "1.9.1",
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "start": "./server.js",
    "dev": "vite build --watch",
    "build": "vite build && tsc",
    "build:watch": "vite build --watch",
    "clean": "rimraf dist"
  },
  "files": [
    "dist",
    "src"
  ],
  "bin": {
    "spotlight-sidecar": "./server.js"
  },
  "main": "dist/main.js",
  "module": "dist/main.js",
  "types": "dist/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "types": "./dist/main.d.ts"
    },
    "./vite-plugin": {
      "import": "./src/vite-plugin.js"
    },
    "./constants": {
      "import": "./src/constants.js",
      "types": "./dist/constants.d.ts"
    },
    "./run": {
      "import": "./src/run.js"
    }
  },
  "dependencies": {
    "kleur": "^4.1.5",
    "launch-editor": "^2.9.1",
    "source-map": "^0.7.4"
  },
  "devDependencies": {
    "@spotlightjs/tsconfig": "workspace:*",
    "@types/node": "^18.19.55",
    "typescript": "^5.6.2",
    "vite": "^5.4.11"
  },
  "volta": {
    "extends": "../../package.json"
  },
  "engines": {
    "node": ">=18"
  }
}
