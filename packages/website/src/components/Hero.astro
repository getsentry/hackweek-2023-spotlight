---
import { Fragment } from 'react';
import ButtonLink from './ButtonLink.astro';
import DownloadButton from './DownloadButton.astro';

// Used to override the default hero component
---

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes fade-in-neon {
    from {
      color: #ffffff00;
      text-shadow: 0 0 5px #ffffff00;
    }
    to {
      color: #ffffff;
      text-shadow:
        0 0 10px #ffffff,
        0 0 50px #a5b4fc,
        0 0 75px #a5b4fc;
    }
  }

  .wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    flex-direction: column;
    padding-top: 4rem;
    padding-bottom: 8rem;
    min-height: calc(100vh - 54px);
  }

  .neon-header {
    color: #fff0;
    letter-spacing: 6px;
    text-shadow: 0 0 5px #fff0;
    font-weight: 500;
    font-size: 3rem;
    text-align: center;
    margin-bottom: 1rem;
    line-height: 1.5;
    animation:
      fade-in 1s ease-in-out 0s forwards,
      fade-in-neon 1s ease-out 0.5s forwards;
    font-family: 'Raleway', sans-serif;
  }

  .sub-heading {
    color: #fff7;
    font-size: 1.2rem;
    font-weight: 400;
    text-align: center;
    max-width: 80%;
    opacity: 0;
    margin-bottom: 3rem;
    animation: fade-in 1s ease-in-out 1s forwards;
  }

  .hero-image {
    width: 100%;
    margin-bottom: 2rem;
    border-radius: 0.5rem;
    opacity: 0;
    animation: fade-in 1s ease-in-out 1s forwards;
  }

  .actions {
    display: flex;
    align-items: center;
    justify-content: center;
    padding-top: 1rem;
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .sub-heading {
      letter-spacing: 3px;
    }
  }
</style>

<div class="wrapper">
  <h1 class="neon-header">Sentry for Development</h1>
  <div class="sub-heading">Spotlight is a highly customizable debug tool embedded in your web app.</div>
  <img src="/images/trace.png" alt="Spotlight Hero" class="hero-image" />
  <p class="actions">
    <ButtonLink href="/about/">Get Started</ButtonLink>
    <DownloadButton>Download for Mac</DownloadButton>
  </p>
</div>
