{
  "plugins": [
    "prettier-plugin-organize-imports",
    "prettier-plugin-tailwindcss"
  ],
  "arrowParens": "avoid",
  "printWidth": 120,
  "tabWidth": 2,
  "proseWrap": "always",
  "singleQuote": true,
  "trailingComma": "all",
  "overrides": [
    {
      "files": ["*.json"],
      "options": {
        "singleQuote": false,
        "quoteProps": "preserve"
      }
    }
  ]
}
